(function(n){function t(){var t=n(".topNavActiveCategory:not(#topNavMobileDropdownButton)");t.children("ul").removeClass("activeMenu");n(".topNavDropdownMenu").removeClass("activeMenu");t.removeClass("topNavActiveCategory")}function i(){var i=n("#topNavMobileDropdownButton");i.removeClass("topNavActiveCategory");t();n("#topNavCategories").removeClass("activeMenu")}n(".topNavMobileCategory").click(function(){var t=n(this),r=t.hasClass("topNavActiveCategory");r?i():(t.addClass("topNavActiveCategory"),n("#topNavCategories").addClass("activeMenu"))});n(".topNavCategory").click(function(){var i=n(this),r=i.hasClass("topNavActiveCategory");t();r||(i.addClass("topNavActiveCategory"),i.children("ul").addClass("activeMenu"))});n(window).resize(function(){i()});n(document).click(function(r){n(r.target).closest(".activeMenu").length||n(r.target).closest(".topNavMobileCategory").length||n(r.target).closest(".topNavCategory").length||(t(),i())})})(jQuery)